<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.bradley.cs246finalproject.MainActivity">

    <Button
        android:id="@+id/submitButton"
        android:layout_width="353dp"
        android:layout_height="76dp"
        android:layout_marginBottom="8dp"
        android:onClick="onSubmit"
        android:text="@string/Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/nuetronText"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Nuetron"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numberPickerNuetron"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/ElectronText"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:text="@string/Electron"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numberPickerElectron"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/protonText"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="24dp"
        android:text="@string/Proton"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numberPickerProton"
        app:layout_constraintRight_toRightOf="parent" />

    <NumberPicker
        android:id="@+id/numberPickerNuetron"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/numberPickerProton"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <NumberPicker
        android:id="@+id/numberPickerElectron"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/atomicSymbolView"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:text="O"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/nameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/atomicNumberEditText"
        android:layout_width="74dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Atomic #"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/atomicSymbolView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="71dp"
        android:layout_height="23dp"
        android:layout_marginBottom="64dp"
        android:text="Oxygen"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/nuetronText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
